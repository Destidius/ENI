package fr.eni.tpmelangeurdemot;

public class TpMelangeurDeMot {

	public static void main(String[] args) 
	{
		String mot = "Bonjour";
		// transformer string tableau de caractère
		char[] tabChar = mot.toCharArray();
		// créer un tableau jumeau : du mot melanger
		char[] tabChar2 = new char[tabChar.length];
		System.out.println(tabChar);
		System.out.println(tabChar[0]); //b
		// deplier le tableau
		for (char lettre : tabChar) {
			System.out.println(lettre);
		}
		
		System.out.println("----------------");
		for (int i= 1;i< tabChar.length-2;i++) {
			System.out.println(tabChar[i]);
		}
	}

}
