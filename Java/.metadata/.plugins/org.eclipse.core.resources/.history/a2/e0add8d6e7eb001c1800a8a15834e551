package fr.eni.nombrepremier;

import java.util.Scanner;

public class NombrePremier 
{

	public static void main(String[] args) 
	{
		String nbPremier = "";
		int limite = saisirInt("Veuillez saisir la limite de recherche :");
		
		if(limite >= 2)
		{
			nbPremier = "2";
		}
		
		for (int nbr = 3; nbr <= limite; nbr += 2) 
		{
			
			int nbDiviseurs = 0;
			int compteur = 3;
			
			while((nbDiviseurs <= 1) && (compteur <= nbr))
			{
				if ((nbr % compteur) == 0)
				{
					nbDiviseurs++;
				}
				compteur =+ 2;
			}
			
			if(nbDiviseurs == 1)
			{
				nbPremier += ", " + nbr;
			}
		}

	if (nbPremier.isEmpty())
		{
			nbPremier = "Aucun résultat";
		}
	
	System.out.println("Les nombres premiers de 0 à " + limite + " sont :");
	System.out.println(nbPremier);
	}

	private static int saisirInt(String message) {
		System.out.println(message);
		Scanner scan = new Scanner(System.in);
		return 0;
	}
	
}