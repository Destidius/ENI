package fr.eni.tpmelangeurdemot;

import java.util.Random;

public class TpMelangeurDeMot2 {
	public static void main(String[] args) {
		String phrase = "Ecrire un programme Melangeur qui mélange les lettres";
		String phrase2 = melangePhrase(phrase);
		
		System.out.println(phrase2);
	}
	
	public static String melangePhrase(String phrase) {
		String phrase2="";
		String[] tabMot = phrase.split(" ");
		return phrase2;
	}
	public static void main(String[] args) 
	{
		Random r = new Random();
		int alea;
		// defini un mot
		String mot = "Bonjour";
		// mot une fois melange
		String motMelange = "";
		// transforme la chaine de car. en tableau de car.
		char[] tabChar = mot.toCharArray();
		
		int nbLettre = tabChar.length;
		// créer le tableau de destination
		char[] tabChar2 = new char[nbLettre];
		// etape 1 copie la premiere lettre
		tabChar2[0] = tabChar[0];
		// etape 2 copie la derniere lettre
		tabChar2[nbLettre-1] = tabChar[nbLettre-1];
		//------------------------------------------
		// on parcours les lettres du milieu
		for (int i=1; i< tabChar.length -1; i++) {
			// objectif de mettre la lettre dans tabChar2
			char l = tabChar[i];
			// defini la ligne avant derniere
			int indiceAvantDernier = nbLettre-2;
			// genere le nb alea de 1 a 5
			//regenere le nb alea si lemplacement est occupé
			do {
				alea =r.nextInt(indiceAvantDernier) + 1;
			}while(tabChar2[alea] != '\u0000'); // tant que lemplacement nest pas vide
			System.out.println(alea);
			// on met la lettre dans le tableau melange
			tabChar2[alea] = l;
		}
		
		for (char c : tabChar2) {
			motMelange += c;
		}
		
		//System.out.println(motMelange);
		return (motMelange);
		}
}