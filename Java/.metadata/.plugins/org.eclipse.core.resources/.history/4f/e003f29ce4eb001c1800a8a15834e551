package fr.eni.nombrepremier;

public class NombrePremier {

	public static void main(String[] args) 
	{
		String nbPremier = "";
		int limite = saisirInt("Veuillez saisir la limite de recherche");
		
		if(limite >= 2)
		{
			nbPremier = "2";
		}
		
	for (int nbr = 3; nbr <= limite; nbr += 2) {
		
		int nbDiviseurs = 0;
		int compteur = 3;
		
		while((nbDiviseurs <= 1) && (compteur <= nbr))
		{
			if ((nbr % compteur) == 0)
			{
				nbDiviseurs++;
			}
			compteur =+ 2;
		}
		
		if(nbDiviseurs == 1)
		{
			nbPremier += ", " + nbr;
		}
	}

	if (nbPremier.isEmpty())
		{
			nbPremier = "Aucun rÃ©sultat";
		}
	}
}